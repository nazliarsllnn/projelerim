#include <stdio.h>
#include <stdlib.h>


int main(int argc, char *argv[]) {

    int s1,s2,s3,ort;
    
    printf("Degerleri Girin\n\n");
    printf("1.sayiyi girin: ");
    scanf("%d",&s1);
    printf("2.sayiyi girin: ");
    scanf("%d",&s2);
    printf("3.sayiyi girin: ");
    scanf("%d",&s3);
    
    printf("\n");
    printf("***SONUC***\n\n");
    printf("Aritmetik ortalama: %d\n---------------------\n\n",ort=(s1+s2+s3)/3);

    if(ort>50)
	{
		printf("Ortalama 50den buyuk...\n");
	}	else
	{
		printf("Ortalama 50den kucuk...\n");
		}    

	return 0;
}
